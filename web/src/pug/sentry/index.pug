extends /base.pug
block head
  link(href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500&display=swap",rel="stylesheet")
  style(type="text/css"): :stylus
    html,body
      width: 100%
      height: 100%
      font-size: 14px
      font-family: Rubik
      background: #fafbfc
    .side-menu
      .item
        display: flex
        align-items: center
        padding: .55em 1.5em
        border-left: 3px solid transparent
      .icon
        background: #fff
        border-radius: 25%
        opacity: .4
        width: 1.3em
        height: 1.3em
        margin-right: .8em
      .label
        flex: 1 0 auto
        opacity: .4
      .hint
        border-radius: 50%
        background: #f00
        color: #fff
        text-align: center
        font-size: 22px
        flex: 0 0 1em
        width: 1em
        height: 1em
        line-height: 1em
        span
          font-size: .5em
          vertical-align: middle
      .item.active
        border-left-color: #d9f
        .label, .icon
          opacity: 1
block body
  .d-flex.w-100.h-100
    .side-menu(style="width:220px;background:#204;color:#fff;flex:0 0 auto;position:fixed;left:0;top:0;height:100%")
      .p-3: .d-flex.align-items-center.mb-2(style="padding:.5em .2em;font-size:1.2em")
        .mr-2
          .bg-light.rounded(style="width:1.95em;height:1.95em")
        div(style="line-height:1em")
          div(style="font-weight:400") PlotDB Ltd.
          .text-sm(style="opacity:0.4") Kirby Wu

      each name,$index in ["Projects","Issues","Discover","Performance","Alerts","Releases","User Feedback","","Activity","Stats","","Settings"]
        if name == ""
          .py-2.px-3
        else
          .item(class=(Math.random() > 0.8 ? "active" : ""))
            .icon
            .label #{name}
            if Math.random() > 0.9
              .hint: span N
            else if Math.random() > 0.7
              .hint: span #{(Math.random() * 20).toFixed(0)}
      .position-absolute(style="bottom:1em")
        .item
          .icon
          .label Collapse

    .flex-grow-1(style="padding-left:220px")
      .w-100.p-3.bg-white.border-bottom.shadow-sm.d-flex.align-items-center
        .mr-auto: b PlotDB Ltd.
        .btn.btn-sm.btn-outline-secondary.shadow-sm #[i.i-plus] Create Project
      .p-4
        .d-flex
          .text-lg.mr-auto.text-nowrap.flex-grow-1: b Issues (4)
          .mr-2
            .dropdown
              .btn.btn-outline-secondary.bg-white.shadow-sm.dropdown-toggle(data-toggle="dropdown") #[span(style="opacity:.6") Sort by:] #[span.text-dark Last Seen]
              .dropdown-menu.shadow-sm.border.w-100
                .dropdown-item Priority
                .dropdown-item Last Seen
                .dropdown-item First Seen
                .dropdown-item Events
                .dropdown-item Users
          div
            .input-group
              .input-group-prepend
                .btn.btn-outline-secondary.bg-white.shadow-sm.dropdown-toggle(data-toggle="dropdown") Unresolved Issues
                .dropdown-menu
              .form-control.p-0.text-nowrap.d-flex.align-items-center
                input.h-100.border-0.flex-grow-1
                .text-secondary
                  span.mr-3: i.i-close
                  span.mr-3: i.i-plus
                  span.mr-3: i.i-gear
      .p-4.d-flex.flex-wrap
        each i in [1,2,3,4,5]
          .card.shadow-sm.flex-grow-1(style="width:240px;margin:0 1.5em 1.5em 0")
            .card-body
              .d-flex
                .mr-2.mt-1: i.i-square
                .flex-grow-1
                  .w-100.d-flex.align-items-center
                    a.mr-auto(href="#"): b: big plotdb.com
                    i.i-heart.text-secondary
                  .w-100.d-flex.align-items-center.text-muted
                    span 0 errors | 384 transactions
            .aspect-ratio.ratio-3by2.bg-light
            .p-4.text-center: .my-4: .btn.btn-outline-secondary.shadow-sm Track Deploys
        each i in [1,2,3]
          .flex-grow-1(style="width:240px;height:0;margin:0 1.5em 1.5em 0")
      .border-top
        .p-4
          .text-right
            a.mx-3(href="#") API
            a.mx-3(href="#") Docs
            a.mx-3(href="#") Contribute
