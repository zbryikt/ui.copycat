extends /base.pug
block prehead
  base(href="..")
block head
  link(href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500&display=swap",rel="stylesheet")
  style(type="text/css"): :stylus
    html,body
      width: 100%
      height: 100%
      font-size: 16px
      font-family: Rubik
      background: #fafbfc
    .ctx-menu
      width: 15em
      padding: .5em 0
      background: #222
      color: #fff
      border-radius: 3px
      box-shadow: 0 3px 6px rgba(0,0,0,.3)
      border: 1px solid #000
    .ctx-menu .divider
      margin: .25em 0
      border-top: 1px solid rgba(255,255,255,.1)
    .ctx-menu .item
      padding: .25em 1em
      display: flex
      & > div:first-child
        flex: 1 0 auto
      .shortcut
        display: flex
        align-items: center
        font-size: 14px
        span, i
          margin-right: .25em
    .ctx-menu .item:hover
      background: #002fff
      color: #fff
    .ctx-menu.light
      border-color: #d5dde1
      background: #fff
      color: #222
    .ctx-menu.light .divider
      border-top: 1px solid rgba(0,0,0,.1)

block body
  .w-1024.mx-auto.my-4.rwd
    .row
      each i in ["dark","light"]
        .col-md
          .ctx-menu(class=i)
            .item #[div Bring forward]#[.shortcut #[i.i-cmd]]]
            .item #[div Bring to front]#[.shortcut #[i.i-alt]#[i.i-cmd]]]
            .item #[div Send backward]#[.shortcut #[i.i-cmd][]
            .item #[div Send to back]#[.shortcut #[i.i-alt]#[i.i-cmd][]
            .divider
            .item #[div Group Selection]#[.shortcut #[i.i-cmd]G]
            .item #[div Frame Selection]#[.shortcut #[i.i-alt]#[i.i-cmd]G]
            .item #[div Ungroup]#[.shortcut #[i.i-shift]#[i.i-cmd]G]
            .item #[div Flatten]#[.shortcut #[i.i-cmd]E]
            .item #[div Outline stroke]#[.shortcut #[i.i-shift]#[i.i-cmd]O]
            .item #[div Use as mask]#[.shortcut #[i.i-dart-up]#[i.i-cmd]M]
            .item #[div Set as thumbnail]#[.shortcut]
            .divider
            .item #[div Add auto layout]#[.shortcut #[i.i-shift]A]
            .item #[div Create component]#[.shortcut #[i.i-alt]#[i.i-cmd]K]
            .item #[div Reset all overwrites]#[.shortcut]
            .item #[div Plugins]#[.shortcut #[i.i-chevron-right]]
            .divider
            .item #[div Show/Hide]#[.shortcut #[i.i-shift]#[i.i-cmd]H]
            .item #[div Lock/Unlock]#[.shortcut #[i.i-shift]#[i.i-cmd]L]
            .divider
            .item #[div Flip Horizontal]#[.shortcut #[i.i-shift]H]
            .item #[div Flip Vertical]#[.shortcut #[i.i-shift]V]
            .divider
            .item #[div Copy/Paste]#[.shortcut #[i.i-chevron-right]]
